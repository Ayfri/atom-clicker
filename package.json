{
	"author": "Ayfri",
	"dependencies": {
		"pixi.js": "^5.3.7"
	},
	"devDependencies": {
		"@types/node": "^14.14.21",
		"@types/pixi.js": "^5.0.0",
		"esbuild": "^0.8.32",
		"gulp": "^4.0.2",
		"gulp-cli": "^2.3.0",
		"gulp-esbuild": "^0.3.15",
		"prettier": "^2.2.1",
		"reload": "^3.1.1",
		"serve": "^11.3.2",
		"typescript": "^4.1.3"
	},
	"homepage": "https://github.com/Ayfri/atom-clicker#readme",
	"license": "GNU",
	"name": "atom-clicker",
	"private": true,
	"prettier": {
		"arrowParens": "avoid",
		"printWidth": 200,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
